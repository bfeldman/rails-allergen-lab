<h1>Recipes</h1>


<%= button_to "New Recipe", new_recipe_path, method: 'get' %>

<% ranked_recipes = @recipes.sort_by{|r| -r.ingredients.count} %>

<ul>
    <% ranked_recipes.each do |recipe| %>
        <li><%= link_to "#{recipe.title} (#{recipe.ingredients.count} ingredients)", recipe_path(recipe) %></li>
    <% end %>
</ul>